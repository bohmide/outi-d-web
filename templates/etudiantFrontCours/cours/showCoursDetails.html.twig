{% extends 'base.html.twig' %}

{% block title %}Détails du Cours - {% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-center mb-4">{{ cours.nom }}</h1>
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">{{ message }}</div>
      {% endfor %}

    {% for message in app.flashes('error') %}
    <div class="alert alert-danger">{{ message }}</div>
      {% endfor %}
    <div class="card">
        <div class="card-body">
            <p class="card-text">État : {{ cours.etat }}</p>
            <p class="card-text">Date de création : {{ cours.dateCreation|date('d/m/Y') }}</p>
            <p class="card-text">Certifié : {{ cours.isCertifie() ? 'Oui' : 'Non' }}</p>

            <a href="{{ path('front_cours_inscrire', {'id': cours.id}) }}" class="btn btn-success">S'inscrire</a>
            <a href="{{ path('app_showcours') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </div>
</div>
{% endblock %}